{
    "compilerOptions": {
        "lib": ["ES6"],
        "module": "ES2022",
        "target": "ES6",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,

    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],

    "ts-node": {
      "esm": true,
      "transpileOnly": true
    }
}

